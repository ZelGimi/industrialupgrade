               src="super_solar_panels:textures/gui/MolecularTransformer"/>

        <slot name="input" x="20" y="27" style="plain"/>
        <gauge name="progress" x="23" y="48" style="progress_molecular_transformer"/>
        <slot name="output" x="20" y="68" style="plain"/>
    </environment>
    <environment name="jei">
        <image x="-5" y="16" width="170" height="64" u="3" v="12" basesize="256"
               src="super_solar_panels:textures/gui/MolecularTransformer JEI"/>

