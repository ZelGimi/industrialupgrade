    <text x="112" y="26" color="16777215">%base.getInput()%</text>
    <text x="112" y="38" color="16777215">%base.getOutput()%</text>
    <text x="112" y="50" color="16777215">%base.getEnergyNeeded()%</text>
    <text x="112" y="62" color="16777215">%base.getEU()%</text>
    <text x="112" y="74" color="16777215">%base.getPercent()%</text>

    <playerInventory x="18" y="98" spacing="5" hotbaroffset="67" style="plain" title="false"/>
